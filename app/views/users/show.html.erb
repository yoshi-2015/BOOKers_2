
<!-- 各ユーザーの投稿一覧画面（ログインしているユーザーの） -->

<!-- header -->
<%= render 'books/header', books: @books %>

<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <!-- サイドバー -->
    <div class="col-xs-3">
      <%= render 'books/new', user: @user %>
    </div>
    <!-- 投稿一覧表 -->
    <div class="col-xs-9">
      <h2>Books detail</h2>
      <table class="table">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
        </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <!-- 画像組み込む -->
                <%= attachment_image_tag @user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.body %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<!-- footer -->
<%= render 'books/footer', books: @books %>
</div>