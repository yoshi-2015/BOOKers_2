<!-- header -->
<%= render 'books/header', books: @books %>

<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_field :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>
<h4>
  <%= link_to "show", book_path %>
  <%= link_to "back", books_path %>
</h4>