<!-- book_index画面 -->

<!-- header -->
<%= render 'books/header', books: @books %>

  <h1>Books</h1>

  <!-- 投稿一覧表 -->
  <table>
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Body</th>
    </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td>
            <%= link_to book_path(book.id) do %>
              <%= book.title %>
            <% end %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

