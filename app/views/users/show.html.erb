<!-- 各ユーザーの投稿一覧画面（ログインしているユーザーの） -->

<!-- header -->
<%= render 'books/header', books: @books %>

<div class="container">
  <div class="row">
    <!-- サイドバー -->
    <div class="col-lg-3" style="background-color: orange;">
      <%= render 'books/new', books: @books %>
    </div>
    <!-- 投稿一覧表 -->
    <div class="col-lg-9">
      <h1>Books detail</h1>
      <table>
        <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th></th>
        </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- footer -->
<%= render 'books/footer', books: @books %>