<!-- 全userの投稿画面 -->
<!-- header -->
<%= render 'books/header', books: @books %>

<% if @book.errors.any? %>
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/new', user: current_user%>
    </div>
    <div class="col-xs-9">
      <h1>Books</h1>
      <!-- 投稿一覧表 -->
      <table class="table">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Body</th>
        </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<!-- footer -->
<%= render 'books/footer', books: @books %>
</div>
