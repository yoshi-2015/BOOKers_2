
<!-- 各ユーザーの投稿一覧画面（ログインしているユーザーの） -->

<!-- header -->
<%= render 'books/header', books: @books %>

<div class="container">
  <div class="row">
    <!-- サイドバー -->
    <div class="col-xs-3">
      <%= render 'books/new2', user: @user %>
    </div>
    <!-- 投稿一覧表 -->
    <div class="col-xs-9">
      <h2>Books detail</h2>
      <table class="table">
        <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<!-- footer -->
<%= render 'books/footer', books: @books %>
</div>